<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odiseo\SyliusReferralsPlugin\Entity\ReferralsProgramView" table="odiseo_referrals_program_view">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="ip" type="string"/>
        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one field="customer" target-entity="Sylius\Component\Customer\Model\CustomerInterface">
            <join-column name="customer_id" referenced-column-name="id" on-delete="CASCADE"/>
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <many-to-one field="referralsProgram" target-entity="Odiseo\SyliusReferralsPlugin\Entity\ReferralsProgramInterface" inversed-by="views">
            <join-column name="referrals_program_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
